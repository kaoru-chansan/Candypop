<!DOCTYPE html>
<html>
  <head>
    <title>Candypop</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/07e3569d7d.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <% if customer_signed_in? %>
      <li>
        <%= link_to "マイページ", customers_show_path(current_customer.id) %>
      </li>
      <li>
        <%= link_to "新規投稿", new_post_path %>
      </li>

      <li>
        <%= link_to "投稿一覧", posts_path %>
      </li>

      <li>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
      </li>

    <% elsif admin_signed_in? %>
       <li>
         <%= link_to 'ユーザー一覧', admin_customers_path %>
       </li>
       <li>
         <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %>
       </li>

    <% else %>
     <li>
       <%= link_to "ゲストログイン（閲覧用）", customers_guest_sign_in_path, method: :post %>
     </li>

      <li>
        <%= link_to "新規登録", new_customer_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_customer_session_path %>
      </li>
    <% end %>




  </header>

  <main>

    <% flash.each do |message_type, message| %>
      <div class="flash-message <%= message_type %>"><%= message %></div>
    <% end %>

    <!--検索-->
    <% if customer_signed_in? && admin_signed_in? %>
      <%= render 'public/searches/serche', serche: @range %>
    <% end %>

    <%= yield %>
  </main>




  </body>
</html>
