<!--検索対象モデルがcustomerの時 -->
<% if @range == "Customer" %>
  <% @customers.each do |customer| %>
    <div class="container">
      <div class="col-8">
        <table class="table">
          <thead>
            <tr>
              <th>イメージ</th>
              <th>ユーザー名</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= image_tag customer.get_customer_image(50,50) %></td>
              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.name %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
<% else %>
  <!--検索対象モデルがcustomerではない時(= 検索対象モデルがpostの時) -->
  <div class="container">
    <div class="row">
      <div class="col-8">

        <% @posts.each do |post| %>

          <div class="row p-2 border rounded border">
            <div class="col-10">

              <%= link_to admin_customer_path(post.customer.id) do %>
              <div class="row align-items-center">
                <div class="col-auto">
                  <%= image_tag post.customer.get_customer_image(50,50) %>
                </div>

                <strong class="col-auto">
                  <%= post.customer.name %>
                </strong>

                <div class="col-auto">
                  <%= post.created_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %>
                </div>
              </div>
              <% end %>

              <div class="row">
                <div class="col-7">
                  <%= image_tag post.get_post_image(400,500) %>
                </div>

                <div class="col-7">
                  <div class="text-wrap" style="width: 25rem;">
                    <%= post.caption %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
