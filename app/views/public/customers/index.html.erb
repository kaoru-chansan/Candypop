<h1>Public::Customers#index</h1>
<p>Find me in app/views/public/customers/index.html.erb</p>

<h2>投稿履歴一覧</h2>

<% @posts.each do |post| %>
  <div>
    <%= image_tag post.get_post_image %>
    <p>投稿画像：<%= image_tag 'sample-author1.jpg' %></p>
    <p>説明：<%= post_image.caption %></p>
    <p>ユーザー名：<%= post.customer.name %></p>
    <p>ユーザー画像：<%= post.customer.customer_image %></p>
  </div>
<% end %>