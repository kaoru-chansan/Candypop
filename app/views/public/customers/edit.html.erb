<p>Find me in app/views/public/customers/edit.html.erb</p>

<h1>ユーザー情報編集</h1></h1>

<%= form_with model: @customer do |f| %>

<label for="inputImage">ProfileImage</label>
<%= f.file_field :customer_image, placeholder: "プロフィール画像", accept: "image/*" %>

<label for="inputName">Name</label>
<%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ユーザー名" %>

<label for="email">email</label>
<%= f.email_field :email, autofocus: true, autocomplete: "email" %>

<label for="password">password</label>
<%= f.password_field :password, autocomplete: "password" %>

<%= f.submit "変更を保存" %>
<% end %>