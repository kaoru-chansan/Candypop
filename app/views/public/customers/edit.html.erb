<!--Public::Customers#edit-->

<div class="container">
  <div class="row">
    <div class="col-auto">
      <% if @customer.errors.any? %>
        <div id="error_explanation">
          <span class="text-danger">
            <h5><%= @customer.errors.count %>件のエラーが発生しました</h5>
          </span>
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-8">

        <div class="row">
          <div class="col-auto">
            <h3>プロフィール編集</h3>
          </div>
        </div>


      <%= form_with url: customers_edit_path, model: @customer do |f| %>
        <div class="row">
          <div class="col-auto">
            プロフィール画像
          </div>
        </div>

        <div class="row py-1">
          <div class="col-auto">
            <%= f.file_field :costomer_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
        </div>

        <div class="row py-1">
          <div class="col-auto">
            ユーザー名
          </div>
        </div>

        <div class="row py-1">
          <div class="col-auto">
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
          </div>
        </div>

        <div class="row py-1">
          <div class="col-auto">
            メールアドレス
          </div>
        </div>

        <div class="row py-1">
          <div class="col-auto">
            <%= f.text_field :email, autofocus: true, id:"inputName", placeholder:"メールアドレス"%>
          </div>
        </div>

        <div class="row py-1">
          <div class="col-auto">
            プロフィール
          </div>
        </div>

        <div class="row">
          <div class="col">
            <%= f.text_area :profile, autofocus: true, id:"inputName", placeholder:"プロフィール"%>
          </div>
        </div>

        <div class="row">
          <div class="col-auto">
            <%= f.submit '保存', class:"btn btn-md btn-block btn-info" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
