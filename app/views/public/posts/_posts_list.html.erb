<div class="container">
  <div class="row">
    <div class="col-8">

      <% posts.each do |post| %>

        <div class="row p-2 border rounded border">
          <div class="col-7">

            <div class="row align-items-center">
              <div class="col-auto">
                <%= image_tag post.customer.get_customer_image(50,50) %>
              </div>

              <strong class="col-auto">
                <%= link_to customers_show_path(post.customer.id) do %>
                <%= post.customer.name %>
                <% end %>
              </strong>

              <div class="col-auto">
                <%= post.created_at %>
              </div>
            </div>

            <div class="row">
              <div class="col-7">
                <%= link_to post_path(post.id) do %>
                <%= image_tag post.get_post_image(500,300) %>
                <% end %>
              </div>

              <div class="col-7">
                <div class="text-wrap" style="width: 6rem;">
                  <%= link_to post_path(post.id) do %>
                  <%= post.caption %>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-auto">
                <%= render 'public/favorites/favorite', post: post %>
              </div>

              <div class="col-auto">
                <%= link_to post_path(post.id) do %>
                  <i class="fa-regular fa-comment"></i>
                  <%= post.post_comments.count %>
                <% end %>
              </div>
            </div>

          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>