<p>Find me in app/views/public/posts/edit.html.erb</p>

<h2>投稿編集</h2>

<%= form_with model: @post do |f| %>
  <label for="inputPsotImage">PostImage</label>
  <%= f.file_field :post_image, placeholder: "投稿画像", accept: "image/*" %><br/>
  <label for="inputCaption">内容</label>
  <%= f.text_field :caption, autofocus: true, id:"inputCaption", placeholder:"内容"%>
  <%= f.submit "変更を保存" %>
<% end %>