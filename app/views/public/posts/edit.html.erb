<div class="container">
  <div class="row">
    <div class="col-auto">
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <span class="text-danger">
            <h5><%= @post.errors.count %>件のエラーが発生しました</h5>
          </span>
          <ul>
            <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-8">

        <div class="row">
          <div class="col-auto">
            <h3>投稿編集</h3>
          </div>
        </div>

      <%= form_with model: @post do |f| %>
        <div class="row">
          <div class="col-auto">
            投稿画像
          </div>
        </div>

        <div class="row py-1">
          <div class="col-auto">
            <%= f.file_field :post_image, placeholder: "投稿画像", accept: "image/*" %>
          </div>
        </div>

        <div class="row py-1">
          <div class="col-auto">
           <%= f.text_field :caption, autofocus: true, id:"inputCaption", placeholder:"投稿内容を記載します"%>
           </div>
        </div>

        <div class="row">
          <div class="col-auto">
            <%= f.submit "保存", class:"btn btn-md btn-block btn-info" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>