<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがcustomerの時 -->
  <% if @range == "Customer" %>
    <tbody>
      <% @customers.each do |customer| %>
        <tr><%= image_tag customer.get_customer_image(100,100) %></tr>
        <tr>
          <td><%= customer.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>

    <!--検索対象モデルがcustomerではない時(= 検索対象モデルがpostの時) -->
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.caption %></td>

        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>